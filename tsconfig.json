{
  "compilerOptions": {
    "target": "es5",                       // older browsers compatibility
    "module": "esnext",                   // let Webpack handle bundling
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",                   // for React 17+ JSX transform
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noEmit": false                        // let Webpack emit
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
